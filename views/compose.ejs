<%- include('partials/header.ejs'); %>
<h1>Compose</h1>
<form action="/compose" , method="post">
    <div class="form-group">
        <label class="form-label" for="postTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle" />
    </div>
    <div class="form-group">
        <label class="form-label" for="postContent">Post</label>
        <textarea class="form-control mb-3" name="postContent" id="postContent" cols="40" rows="10"></textarea>
    </div>
  <button class="btn btn-primary" type="submit">Publish</button>
</form>
